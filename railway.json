{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksConfig": {
            "phases": {
                "setup": {
                    "cmds": [
                        "npm install"
                    ]
                }
            },
            "start": {
                "cmd": "node worker.js"
            }
        },
        "watchPatterns": [
            "/backend/**"
        ]
    },
    "deploy": {
        "startCommand": "node worker.js",
        "healthcheckPath": null,
        "healthcheckTimeout": 100
    }
}